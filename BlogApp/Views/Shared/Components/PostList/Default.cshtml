@model List<Post>

<div class="card-group">

  @foreach (var item in Model)
  {

    <div class="card">
      <div class="card-body">
        <h5 class="card-title">@item.Title</h5>
        <p class="card-text">
          Detayı için <a asp-action="Detail" asp-controller="Post" asp-route-id="@item.Id">tıklayınız</a>
        </p>
      </div>
      <div class="card-body">

        <div class="d-flex">
          <div class="me-auto">
            <a asp-action="Comments" asp-controller="Post" asp-route-id="@item.Id" class="card-link">

              <i class="fa fa-comment" aria-hidden="true"></i>

              @item.Commments.Count() adet
            </a>
          </div>

          <div class="">
            <a href="javascript:void()" class="card-link">
              @foreach (var tagItem in item.Tags)
              {
                <span>#@tagItem.Name</span>
              }
            </a>
          </div>

        </div>
        <div class="card-footer">
          <small class="text-muted">Gönderim Tarihi: @DateTime.Now</small>
        </div>

      </div>


    </div>
      }

  </div>
  
